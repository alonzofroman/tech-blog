<div class="card">
    <div class="d-flex justify-content-center card-header">
        <p>{{post.title}}</p>
    </div>
    <div class="class-body">
        <p>{{post.content}}</p>
        <p>Post By: {{post.user.username}}</p>
    </div>
</div>
<br>

{{#each post.comments as |comment|}}
<div class="card">
    <div class="card-body">
        <p>{{comment.user.username}}</p>
        <p>{{comment.content}}</p>
    </div>
</div>
<br>
{{/each}}