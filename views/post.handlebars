<div class="card">
    <div class="d-flex justify-content-center card-header">
        <p>{{post.title}}</p>
    </div>
    <div class="class-body">
        <p>{{post.content}}</p>
        <p>Post By: {{user.username}}</p>
    </div>
</div>

{{#each comment as |comment|}}
<div class="card">
    <div class="card-body">
        <p>{{user.username}}</p>
        <p>{{comment.content}}</p>
    </div>
</div>