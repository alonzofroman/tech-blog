<div class="container">
{{#each posts as |post|}}
<br>
<div class="card">
    <div class="d-flex justify-content-center card-header bg-secondary">
        <p>{{post.title}}</p>
    </div>

    <div class="card-body">
        <p>{{post.content}}</p>
        <p>Post by: {{user.username}} on {{format_date post.date_created}}</p>
        <a href="/post/{{post.id}}">View Post</a>
    </div>
</div>

{{/each}}
</div>
